<Window x:Class="StPeterCollectors.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StPeterCollectors"
        mc:Ignorable="d"
        Title="frmMain" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="339*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="1" HorizontalAlignment="Left" Margin="41,95,0,0" TextWrapping="Wrap" Text="Test" VerticalAlignment="Top" Height="15" Width="113"/>
        <RadioButton x:Name="rbtnMale" Grid.Column="1" Content="Male" HorizontalAlignment="Left" Margin="41,146,0,0" VerticalAlignment="Top" IsChecked="True"/>
        <RadioButton x:Name="rbtnFemale" Grid.Column="1" Content="Female" HorizontalAlignment="Left" Margin="120,146,0,0" VerticalAlignment="Top"/>
        <Button Grid.Column="1" Content="Submit" HorizontalAlignment="Left" Margin="41,190,0,0" VerticalAlignment="Top" Width="57" Click="Button_Click"/>

    </Grid>
</Window>
